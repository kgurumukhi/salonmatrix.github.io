---
layout: content
title: '<%= name %>'
---
<div class="intro-section">
  <p>SalonMatrix helps you to find the best salon software.<br> <a href="..">Click here</a> to see all {{products.length}} products.</p>
</div>
<div class="product-toolbar">
  <a class="btn btn-primary" href="{{ website }}">Visit Website</a>
</div>
<h2>{{ name }}</h2>
<div class="row">
  <div class="col-md-6">
    <h3>Details</h3>
    <table class="table">
      {{#if pricing }}
      <tr>
        <th>Pricing</th>
        <td>{{ pricing }}</td>
      </tr>
      {{/if}}
      {{#bool free_trial }}
      <tr>
        <th>Free Trial/Demo</th>
        <td>{{#if free_trial}}Yes{{else}}No{{/if}}</td>
      </tr>
      {{/bool}}
      <tr>
        <th>Vendor</th>
        <td>
          {{#if vendor.website }}<a href="{{ vendor.website }}">{{ vendor.name }}</a>{{else}}{{ vendor.name }}{{/if}}
          {{#if vendor.country }}<br>{{country vendor.country }}{{/if}}
        </td>
      </tr>
    </table>
  </div>
  <div class="col-md-6">
    <h3>Features</h3>
    {{#each site.feature_groups }}
    <h4>{{ name }}</h4>
    <table class="table">
      {{#each features }}
        <tr>
          <th>{{ name }}{{#if help }}<br><span class="feature-help">{{ help }}</span>{{/if}}</th>
          <td class="feature-value">
            {{feature_str ../../features key 'Yes' 'No' '?' }}
          </td>
        </tr>
      {{/each}}
    </table>
    {{/each}}
    {{> body }}
  </div>
</div>
